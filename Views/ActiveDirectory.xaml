        <TextBlock Text="Active Directory Tools"
                   Style="{StaticResource HeaderText}"/>

        <UniformGrid Columns="2">

            <Button Style="{StaticResource AzureCard}"
                    Tag="ADUC">
                AD Users and Computers
            </Button>

