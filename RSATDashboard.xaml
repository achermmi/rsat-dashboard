<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RSAT Admin Dashboard"
    WindowStartupLocation="CenterScreen"
    Width="1050"
    Height="700"
    Background="#0F172A"
    ResizeMode="NoResize"
    WindowStyle="None">

    <!-- ========== RESOURCES ========== -->
    <Window.Resources>

        <!-- CARD STYLE (Azure Portal) -->
        <Style x:Key="AzureCard" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="BorderBrush" Value="#60A5FA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                    <Setter Property="BorderBrush" Value="#93C5FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- SIDEBAR BUTTON STYLE -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>

        <!-- ========== TOP BAR ========== -->
        <Border Background="#1E293B" Height="45" VerticalAlignment="Top">
            <DockPanel>
                <TextBlock Text="  RSAT Admin Dashboard"
                           Foreground="#E2E8F0"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Margin="10,0,0,0"/>
                <Button x:Name="CloseBtn"
                        Content="âœ•"
                        Background="Transparent"
                        Foreground="#E2E8F0"
                        Width="40" DockPanel.Dock="Right"
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"/>
            </DockPanel>
        </Border>

        <!-- ========== LAYOUT GRID ========== -->
        <Grid Margin="0,45,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>      <!-- SIDEBAR -->
                <ColumnDefinition Width="*"/>       <!-- CONTENT -->
            </Grid.ColumnDefinitions>

            <!-- ========== SIDEBAR ICONS ========== -->
            <StackPanel Background="#1E293B" Width="80">
                <Button x:Name="BtnDashboard" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Foreground="#60A5FA"/>
                </Button>

                <Button x:Name="BtnAD" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xE700;" FontFamily="Segoe MDL2 Assets" Foreground="#3B82F6"/>
                </Button>

                <Button x:Name="BtnDNS" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Foreground="#3B82F6"/>
                </Button>

                <Button x:Name="BtnCluster" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xF157;" FontFamily="Segoe MDL2 Assets" Foreground="#3B82F6"/>
                </Button>

                <Button x:Name="BtnRunAs" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" Foreground="#3B82F6"/>
                </Button>

                <Button x:Name="BtnSearch" Height="80" Style="{StaticResource SidebarButton}">
                    <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="#3B82F6"/>
                </Button>
            </StackPanel>

            <!-- ========== MAIN CONTENT ========== -->
            <ScrollViewer Grid.Column="1" Background="#0F172A" x:Name="MainContent">
                <StackPanel>
                    <TextBlock Text="RSAT Dashboard - Tema Azure Blue"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,20"
                               FontSize="26"/>
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
